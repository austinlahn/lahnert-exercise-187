//Purpose: This program is designed to get the customers
//selected search value and search for the rest of the 
//sentence and determine a value for printing the item. 
//Then given a quantity from the user, a total cost will
//be calculated.


package edu.cpt187.lahnert.project6;


public class CustomerOrder
{

	//declaring and preparing all class attributes
	private final double FLAT_FEE = 100.00;
	private final double PRICE_PER_CHARACTER = 0.20;

	private String printSubject = "";
	private String printVerb = "";
	private String printPreposition = "";
	private String printObject = "";
	private int lastItemSearchedIndex = 0;
	private int quantity = 0;

	//default constructor
	public CustomerOrder()
	{

	}//end of default constructor

	//setter section 

	//setter for last item searched index
	public void setLastItemSearchedIndex(int borrowedSearchIndex)
	{
		//setting search index
		lastItemSearchedIndex = borrowedSearchIndex;
	}//end of setter

	//setter for print subject
	public void setPrintSubject(String[] borrowedPrintSubjects)
	{
		//assigning print subject
		printSubject = borrowedPrintSubjects[lastItemSearchedIndex];
	}//end of setter

	//setter for print verb
	public void setPrintVerb(String[] borrowedPrintVerbs)
	{
		//assigning print verb
		printVerb = borrowedPrintVerbs[lastItemSearchedIndex];
	}//end of setter

	//setter for print preposition
	public void setPrintPreposition(String[] borrowedPrintPrepositions)
	{
		//assigning print preposition
		printPreposition = borrowedPrintPrepositions[lastItemSearchedIndex];
	}//end of setter

	//setter for print object
	public void setPrintObject(String[] borrowedPrintObjects)
	{
		//assigning print object
		printObject = borrowedPrintObjects[lastItemSearchedIndex];
	}//end of setter

	//setter for quantity
	public void setQuantity(int borrowedNumberOfCopies)
	{
		//assigning quantity
		quantity = borrowedNumberOfCopies;
	}//end of setter

	//getter section

	//getter for print subject
	public String getPrintSubject()
	{
		return printSubject;//returning print subject
	}//end of getter

	//getter for print verb
	public String getPrintVerb()
	{
		return printVerb;//returning print verb
	}//end of getter

	//getter for print preposition()
	public String getPrintPreposition()
	{
		return printPreposition;//returning print preposition
	}//end of getter

	//getter for print object
	public String getPrintObject()
	{
		return printObject;//returning print object
	}//end of getter

	//getter for print length
	public int getPrintLength()
	{
		//returning length for amount printed
		return (printSubject.length()+printVerb.length()+printPreposition.length()+printObject.length());
	}//end of getter

	//getter for print cost
	public double getPrintCost()
	{
		//getting print cost and returning it
		return ((getPrintLength()*PRICE_PER_CHARACTER)+ FLAT_FEE);
	}//end of getter

	//getter for quantity
	public int getQuantity()
	{
		return quantity;//returning quantity
	}//end of getter

	//getter for total cost
	public double getTotalCost()
	{
		return (quantity * getPrintCost());//returning total cost
	}//end of getter

}//end of customer order class
